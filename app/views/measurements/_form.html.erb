<%= form_with(model: measurement) do |form| %>
  <% if measurement.errors.any? %>
    <div style="color: red">
      <h2>Возникло ошибок: <%= measurement.errors.count %></h2>
      <ul>
        <% measurement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Поле выбора пользователя УДАЛЕНО. Оно больше не нужно. -->

  <div class="mb-3">
    <%= form.label :weight, "Вес (кг)", class: "form-label" %>
    <%= form.number_field :weight, step: 0.1, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :waist, "Талия (см)", class: "form-label" %>
    <%= form.number_field :waist, step: 0.1, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :hip, "Бедра (см)", class: "form-label" %>
    <%= form.number_field :hip, step: 0.1, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :date_taken, "Дата замера", class: "form-label" %>
    <%= form.date_field :date_taken, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Сохранить", class: "btn btn-primary" %>
  </div>
<% end %>
