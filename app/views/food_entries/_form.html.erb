<%= form_with(model: food_entry) do |form| %>
  <% if food_entry.errors.any? %>
    <div style="color: red">
      <h2>Ошибок: <%= food_entry.errors.count %> </h2>
      <ul>
        <% food_entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Выбор продукта (вместо ввода ID) -->
  <div>
    <%= form.label :product_id, "Продукт", style: "display: block" %>
    <%= form.collection_select :product_id, Product.all, :id, :name, prompt: "Выберите продукт..." %>
  </div>

  <!-- Выбор приема пищи (вместо ввода ID) -->
  <div>
    <%= form.label :meal_type_id, "Прием пищи", style: "display: block" %>
    <%= form.collection_select :meal_type_id, MealType.all, :id, :name, prompt: "Выберите прием пищи..." %>
  </div>

  <div>
    <%= form.label :weight_grams, "Вес (граммы)", style: "display: block" %>
    <%= form.number_field :weight_grams %>
  </div>

  <div>
    <%= form.label :date_eaten, "Дата", style: "display: block" %>
    <%= form.date_field :date_eaten %>
  </div>

  <br>
  <div>
    <%= form.submit "Сохранить запись" %>
  </div>
<% end %>
